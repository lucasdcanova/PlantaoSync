# =============================================================================
# API ENV EXAMPLE
# =============================================================================

# App
NODE_ENV=production
PORT=3001
APP_URL=https://plantaosync.onrender.com
API_URL=https://plantaosync-api.onrender.com
FRONTEND_URL=https://plantaosync.onrender.com
CORS_ORIGINS=https://plantaosync.onrender.com

# Database (Neon)
# IMPORTANTE:
# - Use senha URL-encoded
# - Nao use channel_binding=require
DATABASE_URL=postgresql://<db_user>:<db_password_url_encoded>@<neon-host-pooler>/<db_name>?sslmode=require
DIRECT_URL=postgresql://<db_user>:<db_password_url_encoded>@<neon-host-direct>/<db_name>?sslmode=require

# Redis (opcional)
# Se nao preencher REDIS_URL/REDIS_HOST, notificacoes ficam desabilitadas
REDIS_URL=
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false

# Auth
JWT_ACCESS_SECRET=<jwt_access_secret_64_chars_or_more>
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=<jwt_refresh_secret_64_chars_or_more>
JWT_REFRESH_EXPIRES_IN=30d
# Fallback opcional:
JWT_SECRET=

# Firebase (FCM) - opcional
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# Email (Resend) - opcional
RESEND_API_KEY=
EMAIL_FROM=noreply@plantaosync.com
EMAIL_FROM_NAME=CONFIRMA PLANTAO

# Storage (Cloudflare R2) - opcional
R2_ACCOUNT_ID=
R2_ACCESS_KEY=
R2_SECRET_KEY=
R2_BUCKET=
R2_PUBLIC_URL=

# Stripe - opcional
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
