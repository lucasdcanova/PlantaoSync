{
  "expo": {
    "name": "CONFIRMA PLANTÃO",
    "slug": "confirma-plantao",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/brand/icon.png",
    "scheme": "confirma-plantao",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/brand/logo-full.png",
      "resizeMode": "contain",
      "backgroundColor": "#09090f"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.confirmaplantao.app",
      "infoPlist": {
        "UIBackgroundModes": ["remote-notification"],
        "NSFaceIDUsageDescription": "Use Face ID para autenticar no CONFIRMA PLANTÃO"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/brand/adaptive-icon.png",
        "backgroundColor": "#4ECDC4"
      },
      "package": "com.confirmaplantao.app",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/brand/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/brand/notification-icon.png",
          "color": "#4ECDC4",
          "sounds": []
        }
      ],
      "expo-font",
      "expo-local-authentication",
      [
        "expo-splash-screen",
        {
          "image": "./assets/brand/logo-full.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#09090f"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "your-eas-project-id"
      }
    }
  }
}
